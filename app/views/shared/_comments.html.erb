<li class='single-comment'>
  <% if current_user %>
    <div class="comment-upvote-box">
    <% values = { vote_type: true, voteable_id: comment.id, voteable_type: comment.class } %>
      <%= form_tag '/votes/1', method: "put", remote: true do -%>
        <% values.each_pair do |key, value|%>
          <%= hidden_field_tag key, value %>
        <% end %>
        <%= button_tag "Boss", :class => 'btn btn-success' %>
      <% end -%>
    </div>
      <div id="comment-score<%= comment.id %>">
        <span><%= comment.vote_count %></span>
      </div>
    <div class="comment-downvote-box">  
    <% values = { vote_type: false, voteable_id: comment.id, voteable_type: comment.class } %>
      <%= form_tag '/votes/1', method: "put", remote: true do -%>
        <% values.each_pair do |key, value|%>
          <%= hidden_field_tag key, value %>
        <% end %>
        <%= button_tag "Not Boss", :class => 'btn btn-danger' %>
      <% end -%>
    </div>
  <% end %>
  <div class="single-comment-body">
    <%= comment.body %>
  </div>
  <span class="single-comment-info"><span class='user-name'><%= comment.user.username %></span>  commented about <%= time_ago_in_words(comment.created_at) %> ago</span>
</li>