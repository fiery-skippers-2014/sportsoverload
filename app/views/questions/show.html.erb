<div class='question col-md-8'>
  <div class="question-title">
  <h3 class="question-title-header"><%= @question.title %><h3>
  </div>
  <div class="question-body">

  <%= @question.body %>
  <div class="question-info"><%= @question.user.username %> asked <%= time_ago_in_words(@question.created_at) %> ago</div>
  </div>
</div>

<h4 class='col-md-12'>Answer this question:</h4>
<div class='answer-question col-md-8'>
  <%= form_for [@question, @answer], remote: true  do |f| %>
    <div class="form-group">
      <%= f.label :body, 'answer' %>
      <%= f.text_area :body, :class => 'form-control' %>
      <%= f.submit 'submit' %>

    </div>
  <% end %>
</div>
<h2 class='col-md-12'><%= pluralize(@question.answers.count,  'answer')%></h2>
<div class='answers col-md-8'>
  <ul class='answer-list'>
  <% @question.answers.each do |answer| %>

    <%= render '/shared/answers', :answer => answer %>
  <% end %>
</ul>
</div>
